div(*ngIf='movie')
  div.card
    div.card-divider
      h4
        | {{ movie.title }}
        |
        span
          i by {{ movie.directors }}
    img([src]='movie.poster')
    div.card-section
      p {{ movie.synopsis }}
      table
        thead
          tr
            th Category
            th Actors
            th Release Year
            th Last View Date
            th Rate
            th Price
        tbody
          tr
            td {{ movie.category }}
            td {{ movie.actors }}
            td {{ movie.releaseYear }}
            td {{ movie.lastViewDate | date }}
            td {{ movie.rate }}
            td {{ movie.price | currency }}
      button(type='button', (click)='goHome()').button.large BACK

